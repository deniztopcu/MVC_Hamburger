@using MVC_Hamburger.Areas.YonetimPaneli.Models.ViewModels
@model MenuVM
@{
	ViewData["Title"] = "Home Page";
}

<div class="row">
	<nav class="products-tabs main-tabs nav nav-tabs col-2 flex-column">
		<a href="/burger-king" class="nav-item nav-link nav-link active">
			<h1>Popüler Ürünler</h1>
		</a><a href="/burger-king" class="nav-item nav-link nav-link"><span>Menüler</span></a>
		<a href="/burger-king" class="nav-item nav-link nav-link"><span>Burgerler</span></a><a href="/burger-king" class="nav-item nav-link nav-link"><span>Kids Menüler</span></a>
		<a href="/burger-king" class="nav-item nav-link nav-link"><span>Çıtır Lezzetler</span></a><a href="/burger-king" class="nav-item nav-link nav-link"><span>Tatlılar</span></a>
		<a href="/burger-king" class="nav-item nav-link nav-link"><span>Soslar</span></a><a href="/burger-king" class="nav-item nav-link nav-link"><span>İçecekler</span></a>
	</nav>
<div class="row text-center justify-content-between col-10 ">

	@foreach (var item in Model.Menuler)
	{
		<div class="col-lg-4 col-md-4 col-sm-4 col-12 row justify-content-center">
			<a href="#">
				<div class="card mt-3">
					<div class="card-header">
						<div class="card-title"><h3>@item.Ad</h3></div>
						<div class="card-img-top">
							<img src="~/MenuResimleri/@item.ResimYolu" width="100%" height="150px">
						</div>
						<div class="card-body">
							<span class="card-footer">
								<span>@item.Fiyat.ToString("0.##") TL</span>
							</span>
							<br />
							<span class="card-footer">
								<span>@item.Icerik</span>
							</span>
							<a class="btn btn-danger" asp-controller="Home" asp-action="Privacy">
								Sepete Ekle
							</a>
							
						</div>
					</div>
				</div>
			</a>
		</div>
	}
</div>
</div>